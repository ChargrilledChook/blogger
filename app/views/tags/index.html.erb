<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag),
      class: 'tag_name', id: "tag_#{tag.id}" %>
      <%= link_to "Delete Tag", tag_path(tag), method: :delete, data: {confirm: "Do you really want to delete this?"}  %>
    </li>
  <% end %>

  <%= link_to "Back to Article Index", articles_path, class: "articles"%>
</ul>
